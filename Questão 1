#include <stdio.h>

int main (){
    // Construindo a Lógica da questão 1
    // 1- Iniciar o código obtendo os números do usuário, de preferência, de uma forma resumida e os guardando num vetor
    int numeros[10];
    int i;
    for(i = 0; i < 10; i++){
        scanf("%d", &numeros[i]);
        printf("%d ", numeros[i]);
        if( i == 9){
            printf("\n");
        }
    }
    // 2 - Após obter os dados, é necessário conferir se estão em um vetor para que seja fácil acessá-los ao longo do código
    // 3 - Criar uma forma de realizar a soma de um conjunto de números que possa se repetir e ao fim, pular uma linha
    for(i = 0; i < 9; i++){
        numeros[i] = numeros[i] + numeros[i + 1];
        printf("%d ", numeros[i]);
        if( i == 8){
            printf("\n");
        }
    }
    // 4 - Repetir todo o processo linha por linha
    for(i = 0; i < 8; i++){
        numeros[i] = numeros[i] + numeros[i + 1];
        printf("%d ", numeros[i]);
        if( i == 7){
            printf("\n");
        }
    }
    for(i = 0; i < 7; i++){
        numeros[i] = numeros[i] + numeros[i + 1];
        printf("%d ", numeros[i]);
        if( i == 6){
            printf("\n");
        }
    }
    for(i = 0; i < 6; i++){
        numeros[i] = numeros[i] + numeros[i + 1];
        printf("%d ", numeros[i]);
        if( i == 5){
            printf("\n");
        }
    }
    for(i = 0; i < 5; i++){
        numeros[i] = numeros[i] + numeros[i + 1];
        printf("%d ", numeros[i]);
        if( i == 4){
            printf("\n");
        }
    }
    for(i = 0; i < 4; i++){
        numeros[i] = numeros[i] + numeros[i + 1];
        printf("%d ", numeros[i]);
        if( i == 3){
            printf("\n");
        }
    }
    for(i = 0; i < 3; i++){
        numeros[i] = numeros[i] + numeros[i + 1];
        printf("%d ", numeros[i]);
        if( i == 2){
            printf("\n");
        }
    }
    for(i = 0; i < 2; i++){
        numeros[i] = numeros[i] + numeros[i + 1];
        printf("%d ", numeros[i]);
        if( i == 1){
            printf("\n");
        }
    }
    for(i = 0; i < 1; i++){
        numeros[i] = numeros[i] + numeros[i + 1];
        printf("%d ", numeros[i]);
        if( i == 0){
            printf("\n");
        }
    }
    // 5 - Após criar todas as repetições, o terminal deve exibir toda a soma.
    return 0;
}
